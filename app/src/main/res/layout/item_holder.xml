<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/tv_genre_id"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:hint="Pritam"
        android:text="Total No. Of Books"
        android:padding="4dp"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_genre_id"
        android:layout_toStartOf="@id/tv_total_number"/>

    <TextView
        android:id="@+id/tv_total_number"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_show_number"
        android:gravity="center"
        android:text="10"
        android:textColor="#ffff"
        android:layout_alignParentRight="true"/>



</RelativeLayout>